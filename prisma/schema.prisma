generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Utente {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  nome            String
  cognome         String
  email           String   @unique
  codice_fiscale  String   @unique
  passwordHash    String
  ruolo           Ruolo
  totpSecret      String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum Ruolo {
  ADMIN
  USER
}